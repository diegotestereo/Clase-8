<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_light"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray" >

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sexo: "
                android:textSize="25dp" />

            <TextView
                android:id="@+id/TxtV_Sexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="sexo"
                android:textSize="25dp" />

          
                <TextView
                    android:id="@+id/TxtV_Sexo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Estudios: "
                android:textSize="25dp" />

            <TextView
                android:id="@+id/TxtV_Estudios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="estudio" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textview06"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:background="@android:color/holo_red_light"
                android:text="Gustos: "
                android:textSize="25dp" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_light"
                android:columnCount="2" >

                <TextView
                    android:id="@+id/TxtV_Gustos1"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
            	    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:text="TextView" />
 			 	<TextView
               		 android:id="@+id/TxtV_Gustos2"
               		 android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_column="1"
                	android:layout_row="0"
                	android:text="TextView" />
 			 	<TextView
                	android:id="@+id/TxtV_Gustos3"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_column="0"
                	android:layout_row="1"
                	android:text="TextView" />
 			 	<TextView
                	android:id="@+id/TxtV_Gustos4"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_column="1"
                	android:layout_row="1"
                	android:text="TextView" />
 			 	<TextView
                	android:id="@+id/TxtV_Gustos5"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_column="0"
                	android:layout_row="2"
                	android:text="TextView" />
 			  	<TextView
                	android:id="@+id/TxtV_Gustos6"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_column="1"
                	android:layout_row="2"
                	android:text="TextView" />
 			 
            </GridLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado de Animo"
                android:textSize="25dp" />

            <RatingBar
                android:id="@+id/RtgBar_Animo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Borrar Preferencias" />
    </LinearLayout>

</LinearLayout>
